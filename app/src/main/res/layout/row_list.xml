<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="91dp"
            android:layout_height="88dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_logo"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Fill in the balance"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/lblTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="11.12.21"
                android:textColor="#000"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="+7.750.000"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/lblHasil"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_success"
                android:padding="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="Success"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
