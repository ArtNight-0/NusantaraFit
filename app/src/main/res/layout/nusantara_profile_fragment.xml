<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorund2"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/setting_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/cart_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cart" />

        <ImageButton
            android:id="@+id/pesan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/comment" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/circle2"
            android:src="@drawable/cwok" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Enggang Bird"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:gravity="center"
                android:text="PREMIUM"
                android:textColor="@color/Primaryorange"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pengikut"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="0"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mengikuti"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="0"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/voucher_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded2"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/kupon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:gravity="center"
                android:text="Voucher"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/point_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded2"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gift" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:gravity="center"
                android:text="Point"
                android:textSize="19dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/nusapayment"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded2"
                android:padding="20dp"
                android:onClick="goToAttract"
                android:scaleType="fitCenter"
                android:src="@drawable/wallet" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-30dp"
                android:gravity="center"
                android:text="NusaPay"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded3"
            android:elevation="10dp"
            android:orientation="vertical">

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/pf_recycler1"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="150dp" />-->
            <Button
                android:id="@+id/myorder"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="My order"
                android:background="@color/white"/>

            <Button
                android:id="@+id/intheprocess"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="In the process"
                android:background="@color/white"/>

            <Button
                android:id="@+id/ontheway"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="On the way"
                android:background="@color/white"/>

            <Button
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Review"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded3"
            android:elevation="10dp"
            android:orientation="vertical">

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/pf_recycler2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="150dp"/>-->
            <Button
                android:id="@+id/wishlist"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="In the process"
                android:background="@color/white"/>

            <Button
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="grid"
                android:background="@color/white"/>

            <Button
                android:id="@+id/cancelation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Cancellation"
                android:background="@color/white"/>

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Logout"
                android:background="@color/white"/>
        </LinearLayout>


    </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/navigation"
        android:background="@color/Primaryorange"
        android:transformPivotX="@dimen/activity_horizontal_margin"
        android:backgroundTint="@color/transparent"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"/>


</androidx.constraintlayout.widget.ConstraintLayout>